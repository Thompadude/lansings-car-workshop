<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>CreatePersonServlet</servlet-name>
        <servlet-class>nu.lansingcarworkshop.servlet.person.CreatePersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePersonServlet</servlet-name>
        <url-pattern>/CreatePersonServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReadPersonServlet</servlet-name>
        <servlet-class>nu.lansingcarworkshop.servlet.person.ReadPersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadPersonServlet</servlet-name>
        <url-pattern>/ReadPersonServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdatePersonServlet</servlet-name>
        <servlet-class>nu.lansingcarworkshop.servlet.person.UpdatePersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePersonServlet</servlet-name>
        <url-pattern>/UpdatePersonServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeletePersonServlet</servlet-name>
        <servlet-class>nu.lansingcarworkshop.servlet.person.DeletePersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePersonServlet</servlet-name>
        <url-pattern>/DeletePersonServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateVehicleServlet</servlet-name>
        <servlet-class>nu.lansingcarworkshop.servlet.vehicle.CreateVehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateVehicleServlet</servlet-name>
        <url-pattern>/CreateVehicleServlet</url-pattern>
    </servlet-mapping>

</web-app>